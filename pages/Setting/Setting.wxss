/* pages/Setting/Setting.wxss */


.user-logo-view{
  width: 100%;
  height: 400rpx;
  display: flex;
  background-color: #00D8A0;
  justify-content: center;
  align-items: center;
}

.user-logo-img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 10rpx solid rgba(230, 223, 223, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-logo-img image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.userCenter-setting-tools{
  padding:16rpx;
  box-sizing: border-box;
}
.cell-setting-item{
  width: 95%;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}